<div class="row">
    <h2>New Article</h2>

    <% if @article.errors.any? %>
    <div class="callout alert">
        <h5><%= pluralize(@article.errors.count, 'error') %> encountered:</h5>
        <ul>
            <% @article.errors.full_messages.each do |error_msg| %>
            <li><%= error_msg %></li>
            <% end %>
        </ul>
    </div>
    <% end %>

    <%= form_for :article, url: articles_path do |f| %>
    <p>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
    </p>

    <p>
        <%= f.label :text %><br>
        <%= f.text_area :text %>
    </p>

    <p>
        <%= f.submit %>
    </p>
    <% end  %>
</div>
